<div id="searchbar">
  <%= form_tag explore_path, method: :get do %>
    <div class="input-group">
      <%= text_field_tag :search, params[:search], placeholder: "Search", class: "form-control", style: "height: 50px; font-size: 1.2rem" %>
        <%= button_tag(type: 'submit', style: "background-color: transparent; border: none; position: relative; right: 55px; z-index: 3"  ) do %>
          <span class="input-group-text border-0" id="search-addon" style= "background-color: transparent" >
            <i class="fas fa-search" style="color: #2e2ac5; font-size: 1.3rem"></i>
          </span>
        <% end %>
    </div>
  <% end %>
</div>
