<section class="livetest section-inner">
<div class="container">
<div class="features section-tests section inner">
  <%= form_tag my_chatrooms_path, method: :get, class: 'form-inline search-form' do |f| %>
    <%= text_field_tag :username, params[:username], placeholder: "Search a Developer", class: "form-control" %>
    <%= submit_tag "Search", class: "btn btn-primary btn-search pad-small" %>
  <% end %>
  <% if @chatrooms.empty? %>
  <h2> No chatrooms. <span><%= link_to "Explore and collaborate!",  "/explore"%></span></h2>
  <% else %>
  <% @chatrooms.each do |chatroom| %>
    <div class="row">
      <%= link_to chatroom_path(chatroom) do %>
        <%# <%= @user.photo %>
        <div class="container">
        <h2 class="testimonials section-title mt-0 text-center"><strong>Your Conversations</strong></h2>
        <%= chatroom.name %>
        <% @chatrooms.each do |chatroom| %>
          <div class="card-product">
          <div class="col d-flex align-items-center">
           <%= image_tag "https://i.pravatar.cc/150?img=#{@project.id}", class: "avatar menu-icon"%>
            <h5 class='username'><%= @project.name %></h5>
          </div>
          <div class="card-product-infos">
           <h2><%= chatroom.name %></h2>
           </div>
           </div>
           <% end %>
      <% end %>
    </div>
   <% end %>
  <% end %>
 </div>
</div>



